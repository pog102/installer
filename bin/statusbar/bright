#!/bin/sh
# Description: Script to get current volume

source color

percent="$(brillo | cut -d. -f1)"
if [ "$percent" -gt 90 ]; then
    icon_volume=""
elif [ "$percent" -gt 70 ]; then
    icon_volume=""
elif [ "$percent" -gt 40 ]; then
    icon_volume=""
elif [ "$percent" -gt 30 ]; then
    icon_volume=""
elif [ "$percent" -gt 10 ]; then
    icon_volume=""
else
    icon_volume=""
fi

printf "%s %s %s%s " "$bg3$fg0" "$icon_volume" "$reset$fg3" " ${percent}%"
#echo "$bg3$fg0 $icon_volume ${percent} $reset" 

#xsetroot -name " $bg3$fg0 $icon_volume $bg4$fg3 $percent"

