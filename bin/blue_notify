#!/bin/bash
status=$2
Bind_f()
{
  if [ "$status" == "bind" ]; then
notify-send -u low -r 12 -i $2 "$1" "Connected"
else
notify-send -u low -r 12 -i $2 "$1" "Disconnected"
  fi
}

shopt -s nocasematch
case "$1" in
 *"Sony"* | "Wireless Controller") Bind_f "$1" "play"
  ;;
  *"Corsair"*) Bind_f "$1" "cor"
  ;;
  *"Keyboard"*) Bind_f "$1" "board"
  ;;
  *) Bind_f "$1" "a"
  ;;
esac
