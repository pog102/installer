* {
    font:   "FiraCode Nerd Font Medium 12";

    bg0:     #0e1313;
    bg1:     #046D9F;
    fg0:     #046D9F;

    accent-color:     #046D9F;
    urgent-color:     #417E98;

    background-color:   transparent;
    text-color:         @fg0;

    margin:     0;
    padding:    0;
    spacing:    0;
}

window {
    location:   center;
    width:      640;
    y-offset:   -300;

    background-color:   @bg0;
}

inputbar {
    spacing:    8px; 
    padding:    8px;
children:   [ entry ];
    background-color:   @bg1;
}

prompt, entry, element-icon, element-text {
    vertical-align: 0.5;
}

prompt {
    text-color: #0e1313;
}

textbox {
    padding:            8px;
    background-color:   @bg1;

}
listview {
    padding:    4px 0;
    lines:      8;
    columns:    1;

    fixed-height:   false;
}

element {
    padding:    8px;
    spacing:    8px;
}

element normal normal {
    text-color: @fg0;
}

element normal urgent {
    text-color: @urgent-color;
}

element normal active {
    text-color: @accent-color;
}

element selected {
    text-color: @bg0;
}

element selected normal, element selected active {
    background-color:   @accent-color;
}

element selected urgent {
    background-color:   @urgent-color;
}

element-icon {
    size:   0.8em;
}

element-text {
    text-color: inherit;
}

