ACTION=="change", \
SUBSYSTEM=="power_supply", \
ATTR{status}=="Discharging", \
ATTR{capacity}=="[0-9]", \
RUN+="/bin/su chad -c '~/.bin/discharge \"$env{POWER_SUPPLY_NAME}\" \"$attr{capacity}\"'"

SUBSYSTEM=="hid", ACTION=="bind", \
RUN+="/bin/su chad -c '~/.bin/blue_notify \"$env{HID_NAME}\" \"$env{ACTION}\"'"


SUBSYSTEM=="hid", ACTION=="remove", \
RUN+="/bin/su chad -c '~/.bin/blue_notify \"$env{HID_NAME}\" \"$env{ACTION}\"'"


